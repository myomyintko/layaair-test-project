{
    "compilerOptions": {
      "module": "es6",
      "target": "es6",
      "strict": true,
      "strictNullChecks": false,
      "noEmitHelpers": true,
      "sourceMap": false,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "lib": [
        "ESNext",
        "dom"
      ]
    },
    "include": [
      "./assets",
      "./src",
      "./engine",
      "./node_modules"
    ]
  }